<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>My Survey</h:title>
    <model>
      <instance>
        <HTMLFormatting id="myform">
          <FontColor/>
          <Image/>
          <Bold/>
          <Italics/>
          <H1/>
          <H2/>
          <FONT1/>
          <FONT2/>
          <CENTER/>
          <blockquote/>
          <Underlined/>
          <Typewrite/>
          <sub/>
          <lists/>
          <euro/>
          <meta>
            <instanceID/>
          </meta>
        </HTMLFormatting>
      </instance>
      <bind nodeset="/HTMLFormatting/FontColor" readonly="true()" type="string"/>
      <bind nodeset="/HTMLFormatting/Image" readonly="true()" type="string"/>
      <bind nodeset="/HTMLFormatting/Bold" readonly="true()" type="string"/>
      <bind nodeset="/HTMLFormatting/Italics" readonly="true()" type="string"/>
      <bind nodeset="/HTMLFormatting/H1" readonly="true()" type="string"/>
      <bind nodeset="/HTMLFormatting/H2" readonly="true()" type="string"/>
      <bind nodeset="/HTMLFormatting/FONT1" readonly="true()" type="string"/>
      <bind nodeset="/HTMLFormatting/FONT2" readonly="true()" type="string"/>
      <bind nodeset="/HTMLFormatting/CENTER" readonly="true()" type="string"/>
      <bind nodeset="/HTMLFormatting/blockquote" readonly="true()" type="string"/>
      <bind nodeset="/HTMLFormatting/Underlined" readonly="true()" type="string"/>
      <bind nodeset="/HTMLFormatting/Typewrite" readonly="true()" type="string"/>
      <bind nodeset="/HTMLFormatting/sub" readonly="true()" type="string"/>
      <bind nodeset="/HTMLFormatting/lists" readonly="true()" type="string"/>
      <bind nodeset="/HTMLFormatting/euro" readonly="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/HTMLFormatting/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/HTMLFormatting/FontColor">
      <label>&lt;font color=&quot;red&quot;&gt;Text in red &lt;/font&gt;</label>
    </input>
    <input ref="/HTMLFormatting/Image">
      <label>&lt;a href=&quot;http://www.esri.com&quot;&gt;Link to esri web site&lt;/a&gt;</label>
    </input>
    <input ref="/HTMLFormatting/Bold">
      <label>&lt;b&gt;This text is bold&lt;/b&gt;</label>
    </input>
    <input ref="/HTMLFormatting/Italics">
      <label>&lt;i&gt;This text is italllized or however you spell it&lt;/i&gt;</label>
    </input>
    <input ref="/HTMLFormatting/H1">
      <label>&lt;H1&gt;Header 1&lt;/H&gt;</label>
    </input>
    <input ref="/HTMLFormatting/H2">
      <label>&lt;H2&gt;Header 2&lt;/H&gt;</label>
    </input>
    <input ref="/HTMLFormatting/FONT1">
      <label>&lt;font size=&quot;1&quot;&gt;This is font size 1&lt;/font&gt;</label>
    </input>
    <input ref="/HTMLFormatting/FONT2">
      <label>&lt;font size=&quot;2&quot;&gt;This is font size 2&lt;/font&gt;</label>
    </input>
    <input ref="/HTMLFormatting/CENTER">
      <label>&lt;center&gt;This text is centered&lt;/center&gt;</label>
    </input>
    <input ref="/HTMLFormatting/blockquote">
      <label>&lt;blockquote&gt;Blockquote (indented)&lt;/blockquote&gt;</label>
    </input>
    <input ref="/HTMLFormatting/Underlined">
      <label>One word is &lt;u&gt;underlined&lt;/u&gt;</label>
    </input>
    <input ref="/HTMLFormatting/Typewrite">
      <label>One word is &lt;tt&gt;typewrite font&lt;/tt&gt;</label>
    </input>
    <input ref="/HTMLFormatting/sub">
      <label>One word is &lt;s&gt;typewrite font&lt;/s&gt;</label>
    </input>
    <input ref="/HTMLFormatting/lists">
      <label>&lt;ul&gt;You can apply HTML formatting to:&lt;li&gt;Groups&lt;/li&gt;&lt;li&gt;Questions&lt;/li&gt;&lt;li&gt;Notes&lt;/li&gt;&lt;ul&gt;</label>
    </input>
    <input ref="/HTMLFormatting/euro">
      <label>&lt;p&gt;I will display &amp;euro;&lt;/p&gt;</label>
    </input>
  </h:body>
</h:html>
